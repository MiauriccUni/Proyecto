@{
    Layout = "_LayoutIngresoMedicionClientes";
}
@section Scripts {
    <script src="https://unpkg.com/gridjs/dist/gridjs.umd.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/medicionesusuarios\medicionesusuarios.js"></script>
}
<section class="hero">
    <h1>Registros de Mediciones</h1>
</section>
<main class="container my-2" style="padding:30px 20px;">
    <div class="row cupones">
        <div class="col-4 cupon-izquierdo">
            <div class="container">
                <h3 class="text-center">Mediciones</h3>
                <br />
                <form action="ListUsers" class="mt-3 mb-3">
                    <div>
                        <label for="idusuario" class="container">Usuarios:</label>
                        <select id="idusuario" class="form-control">
                            <option value="" disabled selected>Seleccione un usuario</option>
                        </select>
                        <br />
                    </div>
                    <div class="mb-3 text-left">
                        <form action="ListUsers" class="mt-3 mb-3">
                            <div class="mb-3">
                                <label for="peso" class="form-label">Peso (kg):</label>
                                <input type="number" id="peso" name="peso" class="form-control" step="0.01" min="0" required>
                            </div>

                            <div class="mb-3">
                                <label for="altura" class="form-label">Altura (cm):</label>
                                <input type="number" id="altura" name="altura" class="form-control" step="0.01" min="0" required>
                            </div>
                        </form>
                    </div>
                    <div class="mb-3">
                        <button type="button" class="btn btn-success" id="brnMediciones">Guardar Mediciones</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-6 cupon-derecho">
            <div class="container">
                <h3 class="text-center">Clientes Registrados</h3>
                <br />
                <div class="container tabla-cupones">
                    <div id="myGrid" style="height: 430px; width: 800px;" class="ag-theme-alpine justify-content-center justify-content-sm-start"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="container style="padding-top: 60px">
        <h3 class="text-center">Cupones creados</h3>
        <br />
        <div class="container tabla-cupones">
            <div id="myGridConMediciones" style="height: 430px; width: 1300px;" class="ag-theme-alpine justify-content-center justify-content-sm-start"></div>
        </div>
    </div>

</main>
